<%=form_for @users, action: :create do |f| %>
    <%= f.label :name, '名前' %>
    <%= f.text_field :name %>
    <%= f.label :password, 'パスワード' %>
    <%= f.text_field :password %>
    <%= f.label :password_confirmation, 'パスワード(確認)' %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit '登録' %>
<% end %>